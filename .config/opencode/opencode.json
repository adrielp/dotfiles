{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "otel-mcp": {
      "type": "remote",
      "url": "https://otel-instrumentation-mcp.prod.k8s-platform-v3.liatr.io/sse/",
      "enabled": false
    },
    "kubernetes": {
        "type": "local",
        "command": ["npx", "-y", "kubernetes-mcp-server@latest"],
        "enabled": true
    },
    "honeycomb": {
        "type": "local",
        "command": ["npx", "-y", "mcp-remote", "https://mcp.honeycomb.io/mcp"],
        "enabled": false
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    },
  }
}
